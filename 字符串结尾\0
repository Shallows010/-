#include<stido.h>
#include<string.h>
int main()
{
	char arr[] = "hello";
	char arr1[] = { 'a','b','c','d'/*,'\0'*/};
	printf("%s\n", arr);
	printf("%s\n", arr1);
	int a = strlen(arr), b = strlen(arr1);
	printf("%d\n%d\n", a,b);
	printf("%d\n", b);
	return 0;
}
